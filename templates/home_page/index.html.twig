{% extends 'base.html.twig' %}
{% block title %}Anasayfa{% endblock %}
{% block body %}
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p> Şu anda bulunduğunuz controller: <h1>{{ controller_name }}</h1></p>
            </div>
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Email</th>
                        </tr>
                    <tbody>
                        {% for customer in customerInfos %}
                            <tr>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.surname }}</td>
                                <td>{{ customer.email }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}